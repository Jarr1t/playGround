{
  "compilerOptions": {
    "noImplicitAny": true,
    "allowJs": true,
    "target": "es6",
    "jsx": "react-jsx",
    "module": "esnext",
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "**/*.tsx"
  ]
}
